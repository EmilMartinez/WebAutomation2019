<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Forever21 Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome-options"/>
    <parameter name="browserVersion" value="30.0"/>
    <parameter name="url" value="https://www.forever21.com/"/>

    <test name = "Forever21 Home">
        <classes>
            <class name="testamazonpages.TestHomePageAmazon"/>
        </classes>
    </test>

</suite>