<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Sephora Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="OS" value="Windows"/>
    <parameter name="os_version" value="1803"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="30.0"/>
    <parameter name="url" value="https://www.sephora.com/"/>

    <test name = "Sephora Home">
        <classes>
            <class name="com.sephora.qa.tests.HomePageTest"/>
        </classes>
    </test>

</suite>